@page
@model AddPostModel
@{

}


<!-- Comments Form -->
<div class="card my-4">
    <h5 class="card-header">Create post:</h5>
    <div class="card-body">
    <form method="POST">
        <div class="form-group">
            <input class="form-control" type="text" asp-for="Input.Title" />
        </div>
        <div class="form-group">
        <textarea class="form-control" rows="3" asp-for="Input.Body"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    </div>
</div>

